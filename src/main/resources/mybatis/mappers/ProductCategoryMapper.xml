<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.saeromteo.app.productcategory">

    <!-- 카테고리 전체 조회 -->
    <select id="readAll" resultType="productcategoryresponsevo">
        SELECT * FROM PRODUCTCATEGORY;
    </select>
    
    <!-- 카테고리 상세 조회 -->
    <select id="readByCategoryNumber" parameterType="int" resultType="productcategoryresponsevo">
        SELECT * FROM PRODUCTCATEGORY WHERE CATEGORYNUMBER = #{categoryNumber};
    </select>
    
    <!-- 카테고리 추가 -->
    <insert id="insertCategory" parameterType="productcategoryrequestvo">
        INSERT INTO PRODUCTCATEGORY (PCATEGORYNAME, PCATEGORYLEVEL, PCATEGORYHIGH)
        VALUES (#{pcategoryName}, #{pcategoryLevel}, #{pcategoryHigh});
    </insert>
    
    <!-- 카테고리 수정 -->
    <update id="updateCategory" parameterType="productcategoryrequestvo">
        UPDATE PRODUCTCATEGORY
        SET PCATEGORYNAME = #{pcategoryName},
            PCATEGORYLEVEL = #{pcategoryLevel},
            PCATEGORYHIGH = #{pcategoryHigh}
        WHERE CATEGORYNUMBER = #{categoryNumber};
    </update>
    
    <!-- 카테고리 삭제 -->
    <delete id="deleteCategory" parameterType="int">
        DELETE FROM PRODUCTCATEGORY
        WHERE CATEGORYNUMBER = #{categoryNumber};
    </delete>
</mapper>
